
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }
    
    function hasActiveReservation(userId) {
      // Check if a user has any reservation that is not 'completed' or 'cancelled'.
      return exists(
        /databases/$(database)/documents/reservations/
          .where("userId", "==", userId)
          .where("status", "in", ["confirmed", "checked-in", "payment-pending"])
      );
    }
    
    // Function to check if the check-in time is within the tolerance period
    function isCheckinWithinTolerance(reservationTimeStr) {
      let now = request.time;
      let todayStr = now.date().toString().split('T')[0]; // "YYYY-MM-DD"
      let reservationTimestamp = timestamp.value(todayStr + 'T' + reservationTimeStr + ':00Z');
      let tolerance = now - duration.value(15, 'm');
      
      // Check-in must happen AFTER the reservation time, but no later than 15 minutes after.
      return now >= reservationTimestamp && tolerance <= reservationTimestamp;
    }

    //--------------------------------
    // Users
    //--------------------------------
    match /users/{userId} {
      // Allow user to read their own document.
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Allow user to create their own document with required fields.
      allow create: if request.auth != null 
                    && request.resource.data.uid == request.auth.uid
                    && request.resource.data.email is string
                    && request.resource.data.displayName is string
                    && request.resource.data.role in ['customer', 'owner']
                    && request.resource.data.cpf is string
                    && request.resource.data.cep is string
                    && request.resource.data.street is string
                    && request.resource.data.number is string
                    && request.resource.data.neighborhood is string
                    && request.resource.data.city is string
                    && request.resource.data.state is string;
      
      // Allow user to update their own document.
      // The CPF and role cannot be changed once set.
      allow update: if request.auth != null && request.auth.uid == userId 
                    && (request.resource.data.cpf == resource.data.cpf || resource.data.cpf == null)
                    && (request.resource.data.role == resource.data.role);
      
      // Disallow deleting user documents and listing all users.
      allow delete, list: if false;
    }

    //--------------------------------
    // Tents & Subcollections
    //--------------------------------
    match /tents/{tentId} {
      // Anyone can read tent information.
      allow read: if true;
      // The tent owner is the only one who can modify the tent.
      // Enforce one tent per owner by making the doc id the owner's uid.
      allow create, update: if request.auth != null && tentId == request.auth.uid && request.resource.data.ownerId == request.auth.uid;
      // Tent owner can delete their tent.
      allow delete: if request.auth != null && resource.data.ownerId == request.auth.uid;
    }

    // MenuItems and RentalItems subcollections
    match /tents/{tentId}/{collection}/{itemId} {
      // Anyone can read subcollection items.
      allow read: if true;
      // Only the parent tent owner can write to these subcollections.
      allow create, update, delete: if request.auth != null && get(/databases/$(database)/documents/tents/$(tentId)).data.ownerId == request.auth.uid;
    }

    //--------------------------------
    // Reservations
    //--------------------------------
    match /reservations/{reservationId} {
      // A user can only create a reservation for themselves, for today, and only if they don't have an active one.
      allow create: if request.auth != null 
                    && request.resource.data.userId == request.auth.uid
                    && !hasActiveReservation(request.auth.uid)
                    && request.resource.data.createdAt.date() == request.time.date();
      
      // Anyone involved (customer or owner) can read the reservation.
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || get(/databases/$(database)/documents/tents/$(resource.data.tentId)).data.ownerId == request.auth.uid);
      
      // Update rules are now more granular.
      allow update: if request.auth != null && (
        // Case 1: Tent owner can update the reservation.
        (
          get(/databases/$(database)/documents/tents/$(resource.data.tentId)).data.ownerId == request.auth.uid &&
          (
            // Owner can do check-in only if within the 15-minute tolerance window.
            ( request.resource.data.status == 'checked-in' && resource.data.status == 'confirmed' && isCheckinWithinTolerance(resource.data.reservationTime) ) ||
            // Owner can handle payment status updates and cancellations
            ( request.resource.data.status != 'checked-in' )
          )
        ) ||
        // Case 2: Customer can update.
        (
          resource.data.userId == request.auth.uid &&
          (
            // They can request payment.
            request.resource.data.status == 'payment-pending' ||
            // They can add new items.
            request.resource.data.items.size() > resource.data.items.size() ||
            // They can cancel ONLY if not yet checked-in.
            (
              request.resource.data.status == 'cancelled' && resource.data.status == 'confirmed'
            )
          )
        )
      );

      // A reservation cannot be deleted via the client for business logic integrity.
      allow delete: if false;
    }
    
    //--------------------------------
    // Chats & Messages
    //--------------------------------
    match /chats/{chatId} {
      // Allow read/update if user is the customer or the tent owner.
      allow read, update: if request.auth != null && (request.auth.uid == resource.data.userId || request.auth.uid == resource.data.tentOwnerId);
      // Allow create if the user is the one initiating the chat.
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    match /chats/{chatId}/messages/{messageId} {
      // Allow read if user is part of the parent chat.
      allow read: if request.auth != null && (
        get(/databases/$(database)/documents/chats/$(chatId)).data.userId == request.auth.uid ||
        get(/databases/$(database)/documents/chats/$(chatId)).data.tentOwnerId == request.auth.uid
      );
      // Allow create if user is part of the parent chat.
      allow create: if request.auth != null && (
        get(/databases/$(database)/documents/chats/$(chatId)).data.userId == request.auth.uid ||
        get(/databases/$(database)/documents/chats/$(chatId)).data.tentOwnerId == request.auth.uid
      );
      // Disallow updates and deletes for message integrity.
      allow update, delete: if false;
    }
  }
}
