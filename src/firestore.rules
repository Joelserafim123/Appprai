rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Public Read Rules ---
    // Allow public read access to tents and all their subcollections (menus, etc.)
    match /tents/{document=**} {
      allow read: if true;
    }

    // --- Write & Granular Rules ---

    // Tents Collection
    match /tents/{tentId} {
      // Write rules for the tent document itself
      allow create: if request.auth != null && request.auth.uid == request.resource.data.ownerId;
      allow update: if request.auth != null && request.auth.uid == resource.data.ownerId && request.resource.data.ownerId == resource.data.ownerId;
      allow delete: if request.auth != null && request.auth.uid == resource.data.ownerId;

      // Write rules for subcollections
      match /menuItems/{menuItemId} {
        allow write: if request.auth != null && get(/databases/$(database)/documents/tents/$(tentId)).data.ownerId == request.auth.uid;
      }

      match /rentalItems/{rentalItemId} {
        allow write: if request.auth != null && get(/databases/$(database)/documents/tents/$(tentId)).data.ownerId == request.auth.uid;
      }

      match /notices/{noticeId} {
        allow write: if request.auth != null && get(/databases/$(database)/documents/tents/$(tentId)).data.ownerId == request.auth.uid;
      }
    }

    // Users Collection
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }
    
    // Chats Collection
    match /chats/{chatId} {
      allow read, write: if request.auth != null && request.auth.uid in resource.data.participantIds;
      
      match /messages/{messageId} {
        allow read: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participantIds;
        allow create: if request.auth != null && request.auth.uid == request.resource.data.senderId;
      }
    }

    // Reservations Collection
    match /reservations/{reservationId} {
        allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
        allow read, update: if request.auth != null && request.auth.uid in resource.data.participantIds;
    }
  }
}
