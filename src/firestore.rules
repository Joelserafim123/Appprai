
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }
    
    function hasActiveReservation(userId) {
      // Check if a user has any reservation that is not 'completed' or 'cancelled'.
      return exists(
        /databases/$(database)/documents/reservations/{reservationId}
      ) && get(/databases/$(database)/documents/reservations/{reservationId}).data.userId == userId
        && get(/databases/$(database)/documents/reservations/{reservationId}).data.status in ["confirmed", "checked-in", "payment-pending"];
    }

    //--------------------------------
    // Users
    //--------------------------------
    match /users/{userId} {
      // Allow user to read their own document.
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Allow user to create their own document with all necessary fields.
      // The role must be either 'customer' or 'owner'.
      allow create: if request.auth != null 
                    && request.resource.data.uid == request.auth.uid
                    && 'uid' in request.resource.data
                    && 'email' in request.resource.data
                    && 'displayName' in request.resource.data
                    && 'role' in request.resource.data && request.resource.data.role in ['customer', 'owner'];
      
      // Allow user to update their own document.
      // The CPF and role cannot be changed once set.
      allow update: if request.auth != null && request.auth.uid == userId 
                    && request.resource.data.cpf == resource.data.cpf
                    && request.resource.data.role == resource.data.role;
      
      // Disallow deleting user documents.
      allow delete: if false;
    }

    //--------------------------------
    // Tents & Subcollections
    //--------------------------------
    match /tents/{tentId} {
      // Anyone can read tent information.
      allow read: if true;

      // Allow creation if the ownerId in the data is the authenticated user.
      // The tentId must also match the user's UID.
      allow create: if request.auth != null 
                    && request.resource.data.ownerId == request.auth.uid 
                    && tentId == request.auth.uid;

      // Allow update if the user is the owner.
      allow update: if request.auth != null && resource.data.ownerId == request.auth.uid;

      // Tent owner can delete their tent.
      allow delete: if request.auth != null && resource.data.ownerId == request.auth.uid;
    }


    // Media, MenuItems, RentalItems
    match /tents/{tentId}/{collection}/{itemId} {
      // Anyone can read subcollection items.
      allow read: if true;
      // Only the parent tent owner can write to these subcollections.
      allow create, update, delete: if request.auth != null && get(/databases/$(database)/documents/tents/$(tentId)).data.ownerId == request.auth.uid;
    }

    //--------------------------------
    // Reservations
    //--------------------------------
    match /reservations/{reservationId} {
      // A user can only create a reservation for themselves and only if they don't have an active one.
      allow create: if request.auth != null 
                    && request.resource.data.userId == request.auth.uid
                    && !hasActiveReservation(request.auth.uid);
      
      // Anyone involved (customer or owner) can read their own reservation.
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || resource.data.tentOwnerId == request.auth.uid);
      
      // Update rules are now more granular.
      allow update: if request.auth != null && (
        // Case 1: Tent owner can update the reservation.
        (
          resource.data.tentOwnerId == request.auth.uid
        ) ||
        // Case 2: Customer can update specific fields.
        (
          resource.data.userId == request.auth.uid &&
          (
            // They can request payment.
            request.resource.data.status == 'payment-pending' ||
            // They can add new items (items array size increases).
            request.resource.data.items.size() > resource.data.items.size() ||
            // They can cancel ONLY if not yet checked-in.
            (
              request.resource.data.status == 'cancelled' && resource.data.status == 'confirmed'
            )
          )
        )
      );

      // A reservation cannot be deleted via the client for business logic integrity.
      allow delete: if false;

      // Allow a user to list only their own reservations, or a tent owner to list theirs.
      allow list: if request.auth != null && 
                  ((request.query.where[0][0] == 'userId' && request.query.where[0][2] == request.auth.uid) ||
                  (request.query.where[0][0] == 'tentOwnerId' && request.query.where[0][2] == request.auth.uid));
    }
     //--------------------------------
    // Chats
    //--------------------------------
    match /chats/{chatId} {
        // A user or tent owner can read a chat they are a part of.
        allow read, write: if request.auth != null && (request.auth.uid == resource.data.userId || request.auth.uid == resource.data.tentOwnerId);

        // A user can create a chat. The creator must be the userId.
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;

        // Allow participants to update last message details.
        allow update: if request.auth != null && (request.auth.uid == resource.data.userId || request.auth.uid == resource.data.tentOwnerId);

        allow delete: if false;
    }

    match /chats/{chatId}/messages/{messageId} {
        // Allow chat participants to read messages.
        allow read: if request.auth != null && (
            exists(/databases/$(database)/documents/chats/$(chatId)) && (
              get(/databases/$(database)/documents/chats/$(chatId)).data.userId == request.auth.uid ||
              get(/databases/$(database)/documents/chats/$(chatId)).data.tentOwnerId == request.auth.uid
            )
        );

        // Allow chat participants to create messages.
        allow create: if request.auth != null && request.resource.data.senderId == request.auth.uid && (
            exists(/databases/$(database)/documents/chats/$(chatId)) && (
              get(/databases/$(database)/documents/chats/$(chatId)).data.userId == request.auth.uid ||
              get(/databases/$(database)/documents/chats/$(chatId)).data.tentOwnerId == request.auth.uid
            )
        );

        allow update, delete: if false;
    }
  }
}
