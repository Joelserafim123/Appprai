rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Profile pictures are publicly readable, but only the user can create/update their own.
    match /users/{userId}/profile.jpg {
      allow read;
      allow create, update: if request.auth != null && request.auth.uid == userId;
    }

    // Tent images are publicly readable.
    match /tents/{tentId}/banner.jpg {
      allow read;
      // Allow create/update if the new file's metadata has the correct owner UID.
      allow create, update: if request.auth != null && request.resource.metadata.ownerUid == request.auth.uid;
      // Allow delete if the existing file's metadata has the correct owner.
      allow delete: if request.auth != null && resource.metadata.ownerUid == request.auth.uid;
    }

    match /tents/{tentId}/logo.jpg {
      allow read;
      allow create, update: if request.auth != null && request.resource.metadata.ownerUid == request.auth.uid;
      allow delete: if request.auth != null && resource.metadata.ownerUid == request.auth.uid;
    }
  }
}
