rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Profile pictures are publicly readable, but only the user can write.
    match /users/{userId}/profile.jpg {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Tent images are publicly readable, but only the owner can write.
    match /tents/{tentId}/{fileName} {
      allow read;
      allow write: if request.auth != null && get(/databases/$(database)/documents/tents/$(tentId)).data.ownerId == request.auth.uid;
    }
  }
}
