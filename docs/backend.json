{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "uid": { "type": "string", "description": "The unique ID of the user." },
        "email": { "type": "string", "format": "email", "description": "The user's email address." },
        "displayName": { "type": "string", "description": "The user's full name." },
        "role": { "type": "string", "enum": ["customer", "owner"], "description": "The user's role in the application." },
        "photoURL": { "type": "string", "format": "uri", "description": "URL of the user's profile picture." },
        "cpf": { "type": "string", "description": "The user's Brazilian individual taxpayer registry number (CPF)." },
        "cep": { "type": "string", "description": "The user's Brazilian postal code (CEP)." },
        "street": { "type": "string", "description": "The user's street address." },
        "number": { "type": "string", "description": "The user's address number." },
        "neighborhood": { "type": "string", "description": "The user's neighborhood." },
        "city": { "type": "string", "description": "The user's city." },
        "state": { "type": "string", "description": "The user's state." },
        "profileComplete": { "type": "boolean", "description": "Flag indicating if the user has completed their profile." }
      },
      "required": ["uid", "email", "displayName", "role"]
    },
    "Tent": {
      "title": "Tent",
      "description": "Represents a beach tent available for rental.",
      "type": "object",
      "properties": {
        "slug": { "type": "string", "description": "A URL-friendly version of the tent name." },
        "name": { "type": "string", "description": "The name of the beach tent." },
        "description": { "type": "string", "description": "A short description of the tent." },
        "beachName": { "type": "string", "description": "The name of the beach where the tent is located." },
        "ownerId": { "type": "string", "description": "The UID of the user who owns the tent." },
        "ownerName": { "type": "string", "description": "The name of the user who owns the tent." },
        "logoUrl": { "type": "string", "format": "uri", "description": "URL for the tent's logo." },
        "location": {
          "type": "object",
          "properties": {
            "latitude": { "type": "number" },
            "longitude": { "type": "number" }
          },
          "required": ["latitude", "longitude"]
        },
        "minimumOrderForFeeWaiver": { "type": "number", "description": "Minimum consumption amount to waive the rental fee." },
        "hasAvailableKits": { "type": "boolean", "description": "Indicates if there are rental kits available." },
        "operatingHours": {
            "type": "object",
            "description": "The operating hours of the tent for each day of the week."
        }
      },
      "required": ["slug", "name", "description", "beachName", "ownerId", "ownerName", "location"]
    },
    "MenuItem": {
      "title": "Menu Item",
      "description": "Represents an item on the tent's menu.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "price": { "type": "number" },
        "category": { "type": "string", "enum": ["Bebidas", "Petiscos", "Pratos Principais"] }
      },
      "required": ["name", "price", "category"]
    },
    "RentalItem": {
        "title": "Rental Item",
        "description": "Represents a rentable item like chairs or umbrellas.",
        "type": "object",
        "properties": {
            "name": { "type": "string", "enum": ["Kit Guarda-sol + 2 Cadeiras", "Cadeira Adicional"] },
            "price": { "type": "number" },
            "quantity": { "type": "number" }
        },
        "required": ["name", "price", "quantity"]
    },
    "Reservation": {
      "title": "Reservation",
      "description": "Represents a customer's reservation at a tent.",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "userName": { "type": "string" },
        "userPhotoURL": { "type": "string", "format": "uri" },
        "tentId": { "type": "string" },
        "tentName": { "type": "string" },
        "tentOwnerId": { "type": "string" },
        "tentOwnerName": { "type": "string" },
        "tentLogoUrl": { "type": "string", "format": "uri" },
        "tentLocation": {
            "type": "object",
            "properties": {
              "latitude": { "type": "number" },
              "longitude": { "type": "number" }
            }
        },
        "items": { "type": "array" },
        "total": { "type": "number" },
        "createdAt": { "type": "string", "format": "date-time" },
        "reservationTime": { "type": "string" },
        "orderNumber": { "type": "string" },
        "checkinCode": { "type": "string" },
        "status": { "type": "string", "enum": ["confirmed", "checked-in", "payment-pending", "completed", "cancelled"] },
        "paymentMethod": { "type": "string", "enum": ["card", "cash", "pix"] },
        "tableNumber": { "type": "number" },
        "participantIds": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["userId", "userName", "tentId", "tentName", "tentOwnerId", "tentOwnerName", "items", "total", "createdAt", "reservationTime", "orderNumber", "checkinCode", "status", "participantIds"]
    },
    "Chat": {
        "title": "Chat",
        "description": "A conversation between a user and a tent owner.",
        "type": "object",
        "properties": {
            "participantIds": { "type": "array", "items": { "type": "string" } },
            "userId": { "type": "string" },
            "userName": { "type": "string" },
            "userPhotoURL": { "type": "string" },
            "tentId": { "type": "string" },
            "tentName": { "type": "string" },
            "tentOwnerId": { "type": "string" },
            "tentLogoUrl": { "type": "string" },
            "lastMessage": { "type": "string" },
            "lastMessageTimestamp": { "type": "string", "format": "date-time" }
        },
        "required": ["participantIds", "userId", "userName", "tentId", "tentName", "tentOwnerId", "lastMessageTimestamp"]
    },
    "ChatMessage": {
        "title": "Chat Message",
        "description": "A single message within a chat.",
        "type": "object",
        "properties": {
            "senderId": { "type": "string" },
            "text": { "type": "string" },
            "timestamp": { "type": "string", "format": "date-time" }
        },
        "required": ["senderId", "text", "timestamp"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "google.com"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores individual user profile data. Path-based ownership."
    },
    "/tents/{tentId}": {
      "schema": { "$ref": "#/entities/Tent" },
      "description": "Stores data for all beach tents. Publicly readable, owner-write."
    },
    "/tents/{tentId}/menuItems/{menuItemId}": {
      "schema": { "$ref": "#/entities/MenuItem" },
      "description": "Menu items for a specific tent. Publicly readable, owner-write."
    },
    "/tents/{tentId}/rentalItems/{rentalItemId}": {
        "schema": { "$ref": "#/entities/RentalItem" },
        "description": "Rental items for a specific tent. Publicly readable, owner-write."
    },
    "/reservations/{reservationId}": {
      "schema": { "$ref": "#/entities/Reservation" },
      "description": "Stores all reservations. Access is controlled via participantIds."
    },
    "/chats/{chatId}": {
        "schema": { "$ref": "#/entities/Chat" },
        "description": "Metadata for a chat session. Access controlled by participantIds."
    },
    "/chats/{chatId}/messages/{messageId}": {
        "schema": { "$ref": "#/entities/ChatMessage" },
        "description": "Messages within a chat. Access controlled by parent chat document."
    }
  }
}
