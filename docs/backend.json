
{
  "entities": {
    "User": {
      "title": "User",
      "description": "Representa um perfil de usuário para clientes e donos de barracas.",
      "type": "object",
      "properties": {
        "uid": { "type": "string", "description": "O identificador único do Firebase Auth." },
        "email": { "type": "string", "format": "email" },
        "displayName": { "type": "string", "description": "Nome completo do usuário." },
        "cpf": { "type": "string", "description": "CPF do usuário." },
        "cep": { "type": "string", "description": "CEP do usuário." },
        "street": { "type": "string", "description": "Rua do usuário." },
        "number": { "type": "string", "description": "Número do endereço do usuário." },
        "neighborhood": { "type": "string", "description": "Bairro do usuário." },
        "city": { "type": "string", "description": "Cidade do usuário." },
        "state": { "type": "string", "description": "Estado do usuário." },
        "photoURL": { "type": "string", "format": "uri", "description": "URL da foto de perfil do usuário." },
        "role": { "type": "string", "enum": ["customer", "owner"], "description": "Função do usuário (cliente ou dono)." }
      },
      "required": ["uid", "email", "displayName", "role"]
    },
    "Tent": {
      "title": "Tent",
      "description": "Representa um negócio de barraca de praia.",
      "type": "object",
      "properties": {
        "ownerId": { "type": "string", "description": "O UID do usuário que é dono da barraca." },
        "ownerName": { "type": "string", "description": "O nome do usuário que é dono da barraca." },
        "name": { "type": "string", "description": "Nome da barraca." },
        "slug": { "type": "string", "description": "Uma versão do nome da barraca amigável para URL." },
        "description": { "type": "string", "description": "Descrição da barraca." },
        "beachName": { "type": "string", "description": "Nome da praia onde a barraca está localizada." },
        "location": {
          "type": "object",
          "properties": {
            "latitude": { "type": "number" },
            "longitude": { "type": "number" }
          },
          "required": ["latitude", "longitude"]
        },
        "minimumOrderForFeeWaiver": { "type": ["number", "null"], "description": "Valor mínimo do pedido para isenção de taxas de aluguel." },
        "hasAvailableKits": { "type": "boolean", "description": "Indica se há kits de aluguel disponíveis." },
        "operatingHours": {
          "type": "object",
          "description": "Horário de funcionamento da barraca.",
          "properties": {
            "monday": { "$ref": "#/entities/OperatingHoursDay" },
            "tuesday": { "$ref": "#/entities/OperatingHoursDay" },
            "wednesday": { "$ref": "#/entities/OperatingHoursDay" },
            "thursday": { "$ref": "#/entities/OperatingHoursDay" },
            "friday": { "$ref": "#/entities/OperatingHoursDay" },
            "saturday": { "$ref": "#/entities/OperatingHoursDay" },
            "sunday": { "$ref": "#/entities/OperatingHoursDay" }
          }
        }
      },
      "required": ["ownerId", "ownerName", "name", "slug", "description", "beachName", "location"]
    },
    "OperatingHoursDay": {
        "title": "Operating Hours Day",
        "description": "Define o horário de funcionamento para um único dia.",
        "type": "object",
        "properties": {
            "isOpen": { "type": "boolean" },
            "open": { "type": "string" },
            "close": { "type": "string" }
        },
        "required": ["isOpen"]
    },
    "MenuItem": {
      "title": "Menu Item",
      "description": "Um item disponível no cardápio de uma barraca.",
      "type": "object",
      "properties": {
        "name": { "type": "string", "description": "Nome do item." },
        "description": { "type": "string", "description": "Descrição do item." },
        "price": { "type": "number", "description": "Preço do item." },
        "category": { "type": "string", "enum": ["Bebidas", "Petiscos", "Pratos Principais"], "description": "Categoria do item." }
      },
      "required": ["name", "price", "category"]
    },
    "RentalItem": {
      "title": "Rental Item",
      "description": "Um item disponível para aluguel em uma barraca (ex: cadeira, guarda-sol).",
      "type": "object",
      "properties": {
        "name": { "type": "string", "enum": ["Kit Guarda-sol + 2 Cadeiras", "Cadeira Adicional"], "description": "Nome do item de aluguel." },
        "price": { "type": "number", "description": "Preço por dia." },
        "quantity": { "type": "number", "description": "Quantidade total disponível." }
      },
      "required": ["name", "price", "quantity"]
    },
    "Reservation": {
      "title": "Reservation",
      "description": "Uma reserva de um cliente para itens de aluguel e/ou itens do cardápio.",
      "type": "object",
      "properties": {
        "userId": { "type": "string", "description": "O UID do cliente." },
        "userName": { "type": "string", "description": "O nome do cliente." },
        "tentId": { "type": "string", "description": "O ID da barraca." },
        "tentOwnerId": { "type": "string", "description": "O UID do dono da barraca." },
        "tentName": { "type": "string", "description": "Nome da barraca." },
        "tentOwnerName": { "type": "string", "description": "O nome do dono da barraca." },
        "tentLocation": {
          "type": "object",
          "properties": {
            "latitude": { "type": "number" },
            "longitude": { "type": "number" }
          },
          "required": ["latitude", "longitude"]
        },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "itemId": { "type": "string", "description": "ID do item." },
              "name": { "type": "string", "description": "Nome do item." },
              "price": { "type": "number", "description": "Preço do item." },
              "quantity": { "type": "number", "description": "Quantidade do item." },
              "status": { "type": "string", "enum": ["confirmed", "pending", "cancelled"], "description": "Status do item na reserva." }
            },
            "required": ["itemId", "name", "price", "quantity", "status"]
          }
        },
        "total": { "type": "number", "description": "Valor total da reserva." },
        "createdAt": { "type": "string", "format": "date-time", "description": "Data e hora da criação da reserva." },
        "reservationTime": { "type": "string", "description": "Horário agendado para a reserva (HH:mm)." },
        "orderNumber": { "type": "string", "description": "Número do pedido de 6 dígitos para identificação." },
        "checkinCode": { "type": "string", "description": "Código de 4 dígitos para confirmação do check-in." },
        "status": { "type": "string", "enum": ["confirmed", "cancelled", "completed", "checked-in", "payment-pending"], "description": "Status geral da reserva." },
        "paymentMethod": { "type": "string", "enum": ["card", "cash", "pix"], "description": "Método de pagamento." },
        "tableNumber": { "type": "number", "description": "Número da mesa atribuída pelo dono." }
      },
      "required": ["userId", "userName", "tentId", "tentOwnerId", "tentName", "tentOwnerName", "tentLocation", "items", "total", "createdAt", "status", "orderNumber", "reservationTime", "checkinCode"]
    },
    "Chat": {
        "title": "Chat",
        "description": "Represents a conversation between a user and a tent owner.",
        "type": "object",
        "properties": {
          "userId": { "type": "string" },
          "userName": { "type": "string" },
          "userPhotoURL": { "type": "string", "format": "uri" },
          "tentId": { "type": "string" },
          "tentName": { "type": "string" },
          "tentOwnerId": { "type": "string" },
          "tentLogoUrl": { "type": "string", "format": "uri" },
          "lastMessage": { "type": "string" },
          "lastMessageTimestamp": { "type": "string", "format": "date-time" }
        },
        "required": ["userId", "userName", "tentId", "tentName", "tentOwnerId", "lastMessageTimestamp"]
    },
    "ChatMessage": {
      "title": "Chat Message",
      "description": "An individual message within a chat.",
      "type": "object",
      "properties": {
        "senderId": { "type": "string" },
        "text": { "type": "string" },
        "timestamp": { "type": "string", "format": "date-time" }
      },
      "required": ["senderId", "text", "timestamp"]
    }
  },
  "auth": {
    "providers": ["phone", "emailLink"],
    "authDomain": "cadastro-3c63f.firebaseapp.com"
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/User" },
      "description": "Armazena informações do perfil do usuário visíveis publicamente."
    },
    "/tents/{tentId}": {
      "schema": { "$ref": "#/entities/Tent" },
      "description": "Armazena informações sobre cada barraca de praia."
    },
    "/tents/{tentId}/menuItems/{menuItemId}": {
      "schema": { "$ref": "#/entities/MenuItem" },
      "description": "Itens do cardápio para uma barraca específica."
    },
    "/tents/{tentId}/rentalItems/{rentalItemId}": {
      "schema": { "$ref": "#/entities/RentalItem" },
      "description": "Itens de aluguel para uma barraca específica."
    },
    "/reservations/{reservationId}": {
      "schema": { "$ref": "#/entities/Reservation" },
      "description": "Armazena todas as reservas de todos os usuários."
    },
     "/chats/{chatId}": {
      "schema": { "$ref": "#/entities/Chat" },
      "description": "Stores metadata for each chat conversation."
    },
    "/chats/{chatId}/messages/{messageId}": {
      "schema": { "$ref": "#/entities/ChatMessage" },
      "description": "Stores the messages for a specific chat."
    }
  }
}
