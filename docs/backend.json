
{
  "entities": {
    "User": {
      "title": "User",
      "description": "Represents a user of the application.",
      "type": "object",
      "properties": {
        "uid": { "type": "string", "description": "The unique ID of the user." },
        "email": { "type": "string", "format": "email", "description": "The user's email address." },
        "displayName": { "type": "string", "description": "The user's full name." },
        "photoURL": { "type": "string", "format": "uri", "description": "URL of the user's profile picture." },
        "cpf": { "type": "string", "description": "The user's CPF." },
        "address": { "type": "string", "description": "The user's address." },
        "role": { "type": "string", "enum": ["customer", "owner"], "description": "The role of the user." }
      },
      "required": ["uid", "email", "displayName", "role", "cpf", "address"]
    },
    "Tent": {
      "title": "Tent",
      "description": "Represents a beach tent business.",
      "type": "object",
      "properties": {
        "ownerId": { "type": "string", "description": "The UID of the user who owns the tent." },
        "name": { "type": "string" },
        "slug": { "type": "string" },
        "description": { "type": "string" },
        "beachName": { "type": "string", "description": "The name of the beach where the tent is located." },
        "latitude": { "type": "number", "description": "The latitude of the tent's location." },
        "longitude": { "type": "number", "description": "The longitude of the tent's location." },
        "minimumOrderForFeeWaiver": { "type": ["number", "null"], "description": "The minimum order total from the menu to waive rental fees." }
      },
      "required": ["ownerId", "name", "slug", "description", "beachName", "latitude", "longitude"]
    },
    "TentImage": {
        "title": "Tent Image",
        "description": "An image of a tent.",
        "type": "object",
        "properties": {
            "imageUrl": { "type": "string" },
            "imageHint": { "type": "string" },
            "description": { "type": "string" }
        },
        "required": ["imageUrl"]
    },
     "ProfileImage": {
        "title": "Profile Image",
        "description": "A profile image for a user.",
        "type": "object",
        "properties": {
            "imageUrl": { "type": "string" },
            "description": { "type": "string" }
        },
        "required": ["imageUrl"]
    },
    "MenuItem": {
      "title": "Menu Item",
      "description": "An item on a tent's menu.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "price": { "type": "number" },
        "category": { "type": "string", "enum": ["Bebidas", "Petiscos", "Pratos Principais"] }
      },
      "required": ["name", "price", "category"]
    },
    "RentalItem": {
        "title": "Rental Item",
        "description": "An item available for rent at a tent.",
        "type": "object",
        "properties": {
            "name": {"type": "string"},
            "price": {"type": "number"},
            "quantity": {"type": "number", "description": "The number of available items for rent."}
        },
        "required": ["name", "price", "quantity"]
    },
    "Reservation": {
      "title": "Reservation",
      "description": "Represents a user's reservation at a tent.",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "tentId": { "type": "string" },
        "tentName": { "type": "string" },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "itemId": {"type": "string"},
              "name": {"type": "string"},
              "price": {"type": "number"},
              "quantity": {"type": "number"}
            },
            "required": ["itemId", "name", "price", "quantity"]
          }
        },
        "total": { "type": "number" },
        "createdAt": { "type": "object" },
        "status": { "type": "string", "enum": ["confirmed", "cancelled", "completed"] }
      },
      "required": ["userId", "tentId", "tentName", "items", "total", "createdAt", "status"]
    }
  },
  "auth": {
    "providers": ["email"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/User" },
      "description": "Stores public user profile information."
    },
     "/users/{userId}/images/{imageId}": {
      "schema": { "$ref": "#/entities/ProfileImage" },
      "description": "Images for a user's profile gallery."
    },
    "/tents/{tentId}": {
        "schema": { "$ref": "#/entities/Tent" },
        "description": "Stores information about each beach tent."
    },
    "/tents/{tentId}/images/{imageId}": {
        "schema": { "$ref": "#/entities/TentImage" },
        "description": "Images for a specific tent."
    },
    "/tents/{tentId}/menuItems/{menuItemId}": {
        "schema": { "$ref": "#/entities/MenuItem" },
        "description": "Menu items for a specific tent."
    },
    "/tents/{tentId}/rentalItems/{rentalItemId}": {
        "schema": { "$ref": "#/entities/RentalItem" },
        "description": "Rental items for a specific tent."
    },
    "/reservations/{reservationId}": {
        "schema": { "$ref": "#/entities/Reservation" },
        "description": "Stores reservation data for users and tents."
    }
  }
}
