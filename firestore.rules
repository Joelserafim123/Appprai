rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Regras para perfis de utilizador
    match /users/{userId} {
      // Um utilizador só pode ler e atualizar o seu próprio perfil.
      allow read, update: if request.auth != null && request.auth.uid == userId;
      // Um utilizador autenticado pode criar o seu perfil.
      allow create: if request.auth != null;
    }

    // Regras para a coleção de barracas (tents)
    match /tents/{tentId} {
      // PERMITE a leitura (get e list) pública para que todos possam ver as barracas.
      // Esta é a correção principal para o seu erro.
      allow read: if true; 
      
      // Apenas o proprietário pode criar ou atualizar a sua barraca.
      allow create, update: if request.auth != null && request.auth.uid == request.resource.data.ownerId;
    }

    // Regras para sub-coleções de barracas
    match /tents/{tentId}/menuItems/{itemId} {
      // O cardápio é público para leitura.
      allow read: if true;
      // Apenas o proprietário pode gerir o cardápio.
      allow write: if request.auth != null && request.auth.uid == get(/databases/$(database)/documents/tents/$(tentId)).data.ownerId;
    }

    match /tents/{tentId}/rentalItems/{itemId} {
      // Os itens de aluguel são públicos para leitura.
      allow read: if true;
      // Apenas o proprietário pode gerir os itens de aluguel.
      allow write: if request.auth != null && request.auth.uid == get(/databases/$(database)/documents/tents/$(tentId)).data.ownerId;
    }

    // Regras para reservas
    match /reservations/{reservationId} {
      // Apenas os participantes (cliente e dono da barraca) podem ler ou atualizar.
      allow read, update: if request.auth != null && request.auth.uid in resource.data.participantIds;
      // Um utilizador autenticado só pode criar reservas para si mesmo.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Regras para conversas
    match /chats/{chatId} {
      // Apenas os participantes podem ler ou atualizar a conversa (ex: última mensagem).
      allow read, update: if request.auth != null && request.auth.uid in resource.data.participantIds;

      match /messages/{messageId} {
        // Apenas os participantes podem ler ou criar mensagens numa conversa.
        allow read, create: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participantIds;
      }
    }
  }
}
