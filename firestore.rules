rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Regra para Perfis de Utilizador
    // Um utilizador só pode ler e escrever no seu próprio documento.
    // Qualquer utilizador autenticado pode criar um perfil (necessário para o registo).
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Regra para Barracas (Tents)
    // Qualquer pessoa (incluindo anónimos) pode ver a lista de barracas e os detalhes de uma barraca.
    // Apenas o proprietário pode criar, atualizar ou apagar a sua própria barraca.
    match /tents/{tentId} {
      allow get, list: if true;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.ownerId;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.ownerId;
    }

    // Regra para Subcoleções de Barracas (Cardápio e Itens de Aluguel)
    // Qualquer pessoa pode ler. Apenas o proprietário da barraca pode escrever.
    match /tents/{tentId}/{subcollection}/{itemId} {
        allow read: if true;
        allow write: if request.auth != null && get(/databases/$(database)/documents/tents/$(tentId)).data.ownerId == request.auth.uid;
    }

    // Regra para Reservas
    // Apenas os participantes (cliente e dono da barraca) podem aceder.
    // Apenas o cliente pode criar a sua própria reserva.
    match /reservations/{reservationId} {
      allow read, update: if request.auth != null && request.auth.uid in resource.data.participantIds;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Regra para Chats
    // Apenas os participantes podem ler, atualizar ou criar um chat.
    match /chats/{chatId} {
      allow read, update, create: if request.auth != null && request.auth.uid in request.resource.data.participantIds;
      
      // Regra para Mensagens dentro de um Chat
      // Apenas os participantes do chat podem ler ou enviar mensagens.
      match /messages/{messageId} {
        allow read, create: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participantIds;
      }
    }
  }
}
