rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ==== REGRAS PARA PERFIS DE UTILIZADOR (users) ====
    match /users/{userId} {
      // Um utilizador autenticado pode criar o seu próprio perfil.
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // Um utilizador só pode ler e atualizar os seus próprios dados.
      allow read, update: if request.auth != null && request.auth.uid == userId;
      
      // Um utilizador não pode apagar o seu perfil (medida de segurança).
      allow delete: if false;
    }

    // ==== REGRAS PARA BARRACAS (tents) ====
    match /tents/{tentId} {
      // Qualquer pessoa (autenticada ou não) pode ler os dados de uma barraca.
      allow get: if true;
      
      // O proprietário da barraca é o único que a pode atualizar ou apagar.
      // Usamos `get()` para aceder ao documento *antes* da alteração.
      allow update, delete: if request.auth != null && get(/databases/$(database)/documents/tents/$(tentId)).data.ownerId == request.auth.uid;
      
      // --- Sub-coleções da barraca ---
      match /menuItems/{itemId} {
        allow read: if true; // `read` inclui `get` e `list`.
        // Apenas o proprietário da barraca pode modificar o cardápio.
        allow write: if request.auth != null && get(/databases/$(database)/documents/tents/$(tentId)).data.ownerId == request.auth.uid;
      }
      
      match /rentalItems/{itemId} {
        allow read: if true; // `read` inclui `get` e `list`.
        // Apenas o proprietário da barraca pode modificar os itens de aluguer.
        allow write: if request.auth != null && get(/databases/$(database)/documents/tents/$(tentId)).data.ownerId == request.auth.uid;
      }
    }
    
    // Regra separada para a coleção de barracas, para permitir listagem e criação.
    match /tents {
      // Qualquer pessoa pode listar todas as barracas (essencial para o mapa).
      allow list: if true;
      
      // Um utilizador autenticado só pode criar uma barraca se for o proprietário dela.
      // Usamos `request.resource.data` porque o documento ainda não existe.
      allow create: if request.auth != null && request.auth.uid == request.resource.data.ownerId;
    }

    // ==== REGRAS PARA RESERVAS (reservations) ====
    match /reservations/{reservationId} {
      // Um utilizador autenticado só pode criar uma reserva para si mesmo.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Apenas os participantes da reserva (cliente e dono da barraca) podem lê-la ou atualizá-la.
      allow read, update: if request.auth != null && request.auth.uid in resource.data.participantIds;
    }

    // ==== REGRAS PARA CONVERSAS (chats) ====
    match /chats/{chatId} {
      // Apenas participantes podem criar, ler ou atualizar a conversa.
      allow create: if request.auth != null && request.auth.uid in request.resource.data.participantIds;
      allow read, update: if request.auth != null && request.auth.uid in resource.data.participantIds;

      // --- Sub-coleção de mensagens ---
      match /messages/{messageId} {
        // Apenas participantes podem ler ou criar mensagens na conversa.
        allow read, create: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participantIds;
      }
    }
  }
}
