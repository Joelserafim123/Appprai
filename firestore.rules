rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    //--------------------------------
    // Users
    //--------------------------------
    // Only the authenticated user can read or write their own user document.
    // No one can list all users.
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null; // Anyone can create a user doc, but usually tied to their own UID
      allow list: if false;
    }

    //--------------------------------
    // Tents & Subcollections
    //--------------------------------
    match /tents/{tentId} {
      // Anyone can read tent information.
      allow read: if true;
      // Only the authenticated owner can write to their tent document.
      // On create, ownerId must match the user. On update, it must be unchanged.
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.ownerId == request.auth.uid;
    }

    // Media, MenuItems, RentalItems
    match /tents/{tentId}/{collection}/{itemId} {
      // Anyone can read subcollection items.
      allow read: if true;
      // Only the parent tent owner can write to these subcollections.
      allow write: if request.auth != null && get(/databases/$(database)/documents/tents/$(tentId)).data.ownerId == request.auth.uid;
    }

    //--------------------------------
    // Reservations
    //--------------------------------
    match /reservations/{reservationId} {
      // A user can only create a reservation for themselves.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // Only the user who made the reservation or the owner of the corresponding tent can read or update it.
      allow read, update: if request.auth != null && (resource.data.userId == request.auth.uid || get(/databases/$(database)/documents/tents/$(resource.data.tentId)).data.ownerId == request.auth.uid);
      // A reservation cannot be deleted via the client for business logic integrity.
      allow delete: if false;
    }

    //--------------------------------
    // Chats
    //--------------------------------
    match /chats/{chatId} {
        // Only the two participants in the chat (the user and the tent owner) can read or write the chat document.
        allow read, write: if request.auth != null && (request.auth.uid == resource.data.userId || request.auth.uid == resource.data.tentOwnerId);
        // On create, the creator must be one of the participants.
        allow create: if request.auth != null && (request.auth.uid == request.resource.data.userId || request.auth.uid == request.resource.data.tentOwnerId);

        // Messages Subcollection
        match /messages/{messageId} {
            // Only participants can list or read messages.
            allow list, read: if request.auth != null && (request.auth.uid == get(/databases/$(database)/documents/chats/$(chatId)).data.userId || request.auth.uid == get(/databases/$(database)/documents/chats/$(chatId)).data.tentOwnerId);
            // Only a participant can create a message, and they must be the sender.
            allow create: if request.auth != null && request.resource.data.senderId == request.auth.uid && (request.auth.uid == get(/databases/$(database)/documents/chats/$(chatId)).data.userId || request.auth.uid == get(/databases/$(database)/documents/chats/$(chatId)).data.tentOwnerId);
             // Messages are immutable.
            allow update, delete: if false;
        }
    }
  }
}
