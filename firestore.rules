
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    //--------------------------------
    // Users
    //--------------------------------
    match /users/{userId} {
      // Allow user to read and update their own document.
      allow read, update: if request.auth != null && request.auth.uid == userId;
      // Allow user to create their own document.
      allow create: if request.auth != null && request.auth.uid == userId;
      // Disallow deleting user documents and listing all users.
      allow delete, list: if false;
    }

    //--------------------------------
    // Tents & Subcollections
    //--------------------------------
    match /tents/{tentId} {
      // Anyone can read tent information.
      allow read: if true;
      // The tent owner is the only one who can modify the tent.
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.ownerId == request.auth.uid;
    }

    // Media, MenuItems, RentalItems
    match /tents/{tentId}/{collection}/{itemId} {
      // Anyone can read subcollection items.
      allow read: if true;
      // Only the parent tent owner can write to these subcollections.
      allow create, update, delete: if request.auth != null && get(/databases/$(database)/documents/tents/$(tentId)).data.ownerId == request.auth.uid;
    }

    //--------------------------------
    // Reservations
    //--------------------------------
    match /reservations/{reservationId} {
      // A user can only create a reservation for themselves.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // Only the user who made the reservation or the owner of the corresponding tent can read it.
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || get(/databases/$(database)/documents/tents/$(resource.data.tentId)).data.ownerId == request.auth.uid);
      // Update logic is more granular now
      allow update: if request.auth != null && (
        // Case 1: Tent owner can update status, paymentMethod, and tableNumber
        (get(/databases/$(database)/documents/tents/$(resource.data.tentId)).data.ownerId == request.auth.uid) ||
        // Case 2: User who made the reservation can update it
        (resource.data.userId == request.auth.uid && (
            // User can add items if status is 'checked-in'
            (resource.data.status == 'checked-in' && request.resource.data.items.size() >= resource.data.items.size()) ||
            // User can request payment
            (request.resource.data.status == 'payment-pending' && resource.data.status == 'checked-in')
          )
        )
      );
      // A reservation cannot be deleted via the client for business logic integrity.
      allow delete: if false;
    }

    //--------------------------------
    // Chats
    //--------------------------------
    match /chats/{chatId} {
        // Only the two participants in the chat (the user and the tent owner) can read or write the chat document.
        allow read, write: if request.auth != null && (request.auth.uid == resource.data.userId || request.auth.uid == resource.data.tentOwnerId);
        // On create, the creator must be one of the participants.
        allow create: if request.auth != null && (request.auth.uid == request.resource.data.userId || request.auth.uid == request.resource.data.tentOwnerId);

        // Messages Subcollection
        match /messages/{messageId} {
            // Only participants can list or read messages.
            allow list, read: if request.auth != null && (request.auth.uid == get(/databases/$(database)/documents/chats/$(chatId)).data.userId || request.auth.uid == get(/databases/$(database)/documents/chats/$(chatId)).data.tentOwnerId);
            // Only a participant can create a message, and they must be the sender.
            allow create: if request.auth != null && request.resource.data.senderId == request.auth.uid && (request.auth.uid == get(/databases/$(database)/documents/chats/$(chatId)).data.userId || request.auth.uid == get(/databases/$(database)/documents/chats/$(chatId)).data.tentOwnerId);
             // Messages are immutable.
            allow update, delete: if false;
        }
    }
  }
}
