
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Os utilizadores podem ler/escrever o seu próprio perfil.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
    }

    // As tendas são publicamente legíveis, mas apenas o proprietário pode escrever.
    match /tents/{tentId} {
      allow read: if true;
      allow create, update: if request.auth != null && request.auth.uid == tentId;
      
      // Os itens do menu e do aluguer são publicamente legíveis, o proprietário pode escrever.
      match /menuItems/{menuItemId} {
        allow read: if true;
        allow create, update, delete: if request.auth != null && request.auth.uid == tentId;
      }

      match /rentalItems/{rentalItemId} {
        allow read: if true;
        allow create, update, delete: if request.auth != null && request.auth.uid == tentId;
      }
    }

    // As reservas podem ser criadas pelo utilizador e lidas/atualizadas pelo utilizador ou pelo proprietário da tenda.
    match /reservations/{reservationId} {
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow read, update: if request.auth != null && (request.auth.uid == resource.data.userId || request.auth.uid == resource.data.tentOwnerId);
    }
    
    // As conversas podem ser acedidas pelos participantes (utilizador e proprietário da tenda).
    match /chats/{chatId} {
      allow read, update: if request.auth != null && (request.auth.uid == resource.data.userId || request.auth.uid == resource.data.tentOwnerId);
      // Assumindo que a criação do chat é tratada no lado do cliente e iniciada pelo utilizador.
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;

      // As mensagens podem ser criadas e lidas pelos participantes da conversa.
      match /messages/{messageId} {
        allow read: if request.auth != null && (request.auth.uid == get(/databases/$(database)/documents/chats/$(chatId)).data.userId || request.auth.uid == get(/databases/$(database)/documents/chats/$(chatId)).data.tentOwnerId);
        allow create: if request.auth != null && request.resource.data.senderId == request.auth.uid && (request.auth.uid == get(/databases/$(database)/documents/chats/$(chatId)).data.userId || request.auth.uid == get(/databases/$(database)/documents/chats/$(chatId)).data.tentOwnerId);
      }
    }
  }
}
