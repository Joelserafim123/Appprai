rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Regras para a coleção tents
    match /tents/{document} {
      
      // Permitir leitura apenas para usuários autenticados
      allow read: if request.auth != null;
      
      // Se quiser permitir apenas usuários com email verificado:
      // allow read: if request.auth.token.email_verified == true;
      
      // Se quiser permitir apenas para um UID específico:
      // allow read: if request.auth.uid == "41egpnF7ZxM5eMcaSB9PlTyBIJo2";
    }
  }
}
