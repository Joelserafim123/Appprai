rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // HELPER FUNCTIONS
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // --- USERS ---
    // Users can create their own profile.
    // They can only read and update their own profile.
    match /users/{userId} {
      allow read, update: if isOwner(userId);
      allow create: if isAuthenticated();
    }

    // --- TENTS ---
    // Anyone can list and view tents and their subcollections.
    match /tents/{tentId} {
      allow get, list: if true;

      // Only an authenticated user whose `role` is `owner` can create a tent.
      // The `ownerId` in the new tent data must match the creator's UID.
      allow create: if isAuthenticated()
                    && request.auth.uid == request.resource.data.ownerId
                    && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'owner';

      // Only the owner of the tent can update or delete it.
      allow update, delete: if isAuthenticated()
                           && request.auth.uid == resource.data.ownerId;

      // --- TENT SUBCOLLECTIONS (MENU, RENTALS) ---
      match /menuItems/{menuItemId} {
        allow get, list: if true;

        // Only the owner of the parent tent can manage menu items.
        allow create, update, delete: if isAuthenticated()
                                     && request.auth.uid == get(/databases/$(database)/documents/tents/$(tentId)).data.ownerId;
      }

      match /rentalItems/{rentalItemId} {
        allow get, list: if true;

        // Only the owner of the parent tent can manage rental items.
        allow create, update, delete: if isAuthenticated()
                                     && request.auth.uid == get(/databases/$(database)/documents/tents/$(tentId)).data.ownerId;
      }
    }

    // --- RESERVATIONS ---
    // Authenticated users can create reservations.
    // Only participants (the user who made it, and the tent owner) can read or update it.
    match /reservations/{reservationId} {
      allow create: if isAuthenticated() && isOwner(request.resource.data.userId);
      allow get, update: if isAuthenticated() && request.auth.uid in resource.data.participantIds;
      
      // Listing reservations is complex. Users should only list their own.
      // This is enforced by queries in the app code. The rule just protects against broad list scans.
      allow list: if isAuthenticated();
    }

    // --- CHATS ---
    // Authenticated users can create chats.
    // Only participants can read or update the chat document.
    match /chats/{chatId} {
      allow create: if isAuthenticated() && request.auth.uid in request.resource.data.participantIds;
      allow get, update: if isAuthenticated() && request.auth.uid in resource.data.participantIds;

      // Similar to reservations, prevent broad scans. App queries should filter.
      allow list: if isAuthenticated();

      // --- CHAT MESSAGES ---
      // Only participants of the chat can read or create messages.
      match /messages/{messageId} {
        allow read, create: if isAuthenticated() && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participantIds;
      }
    }
  }
}
